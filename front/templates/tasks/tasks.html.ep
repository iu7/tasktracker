<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Home page</title>
	<link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
	<div class="header">
		<div class="nav">
			<div class="nav-itm"><a href="">Projects</a></div>
			<div class="nav-itm active"><a href="">Tasks</a></div>
			<div class="nav-itm"><a href="">Registration</a></div>
		</div>
	</div>
	<div class="main">
		<h2>Tasks</h2>
		% if ($args->{msg}) {
			<h3><%= $args->{msg} %> </h3>
		% }

		<div class="left">
			<ul>
				<li>
					<form action="/tasks" method="GET">
						<input class="name" type="text" name="filter">
						<button type="submit">Поиск</button>
					</form>
				</li>
				<li>
					<p>Name</p>
					<p>Priority</p>
					<p>State</p>
					<p>Type</p>
					<p>Assignee</p>
				</li>
				% foreach my $t (@{ $args->{tasks} }) {
				% my $ref = "/projects/$t->{project_id}/task/$t->{id}";
				<li>
					<p><a href="<%= $ref %>"><%= $t->{name} %></a></p>
					<p><%= $args->{names}{priorities}[$t->{priority_id}] %></p>
					<p><%= $args->{names}{states}[$t->{state_id}] %></p>
					<p><%= $args->{names}{types}[$t->{type_id}] %></p>
					<p><%= $t->{assignee_id} %></p>
				</li>
				% }
			</ul>
		</div>

	</div>
	<div class="footer"></div>
</body>
</html>
