<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Home page</title>
	<link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
	<div class="header">
		<div class="nav">
			<div class="nav-itm"><a href="">Projects</a></div>
			<div class="nav-itm active"><a href="">Tasks</a></div>
			<div class="nav-itm"><a href="">Registration</a></div>
		</div>
	</div>
	<div class="main">
		<h2>Tasks</h2>
		% if ($msg) {
			<h3> <%= $msg %> </h3>
		% }
		<div class="left">
			%= form_for new_task => (method => 'POST') => begin
			<ul>
				<li>
					<p>Проект</p>
					<p>
						<input type="text" class="name" name="project_id" required>
					</p>
				</li>
				<li>
					<p>Тема</p>
					<p>
						<input type="text" class="name" name="subject" required>
					</p>
				</li>
				<li>
					<p>Тип</p>
					<p>
						<select name="type_id" id="">
							% for (my $i = 0; $i < @{$args->{types}}; $i++) {
								% my $val = $args->{types}[$i];
								% if (not $i) {
									<option value="<%= $i %>" selected><%= $val %></option>
								% } else {
									<option value="<%= $i %>"><%= $val %></option>
								% }
							% }
						</select>
					</p>
				</li>
				<li>
					<p>Приоритет</p>
					<p>
						<select name="priority_id" id="">
							% for (my $i = 0; $i < @{$args->{priorities}}; $i++) {
								% my $val = $args->{priorities}[$i];
								% if (not $i) {
									<option value="<%= $i %>" selected><%= $val %></option>
								% } else {
									<option value="<%= $i %>"><%= $val %></option>
								% }
							% }
						</select>
					</p>
				</li>
				<li>
					<p>Состояние</p>
					<p>
						<select name="state_id" id="">
							% for (my $i = 0; $i < @{$args->{states}}; $i++) {
								% my $val = $args->{states}[$i];
								% if (not $i) {
									<option value="<%= $i %>" selected><%= $val %></option>
								% } else {
									<option value="<%= $i %>"><%= $val %></option>
								% }
							% }
						</select>
					</p>
				</li>
				<li>
					<p>Исполнитель</p>
					<p>
						<input type="text" class="name" name="assignee_id" required>
					</p>
				</li>
				<li>
					<p>Описание</p>
					<p><textarea name="description" id="" cols="30" rows="5">
					</textarea></p>
				</li>
				<li>
					<button type="submit">Создать</button>
				</li>
			</ul>
			% end
		</div>
	</div>
	<div class="footer"></div>
</body>
</html>
