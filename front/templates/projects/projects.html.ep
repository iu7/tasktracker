<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Home page</title>
	<link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
	<div class="header">
		<div class="nav">
			<div class="nav-itm active"><a href="">Projects</a></div>
			<div class="nav-itm"><a href="">Tasks</a></div>
			<div class="nav-itm"><a href="">Registration</a></div>
		</div>
		<div class="form">
			
		</div>
	</div>
	<div class="main">
		<div class="left">
			<h2>Projects</h2>
			% if ($args->{msg}) {
				<h3><%= $args->{msg} %></h3>
			% }
			<ul>
				<li>
					<p class="name">Name</p>
					<p class="responsible">Responsible</p>
					<p class="settings">Settings</p>
				</li>
				% foreach my $p (@{ $args->{projects} }) {
					<li>
						<p class="name"><%= $p->{name} %></p>
						<p class="responsible"><%= $p->{managerId} %></p>
						<p class="settings">
							<a href="/projects/<%= $p->{name} %>">Детали</a>
						</p>
					</li>
				% }
			</ul>
		</div>
	</div>
	<div class="footer"></div>
</body>
</html>
