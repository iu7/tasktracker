<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Home page</title>
	<link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
	<div class="header">
		<div class="nav">
			<div class="nav-itm"><a href="">Projects</a></div>
			<div class="nav-itm"><a href="">Tasks</a></div>
			<div class="nav-itm"><a href="">Registration</a></div>
		</div>
		<div class="form">
			
		</div>
	</div>
	<div class="main">
		<h2>Профиль пользователя</h2>
		% if ($msg) {
		<h3><%= $msg %></h3>
		% }
		<div class="left">
			<ul>
				%= form_for users_update_name => (method => 'POST') => begin
					<li>
						<p>Имя</p>
						<p>
							<input class="name" type="text" name="name" value="<%= $args->{name} %>" required>
						</p>
						<p><button type="submit">Сохранить</button></p>
					</li>
				% end

				%= form_for users_update_email => (method => 'POST') => begin
					<li>
						<p>Email</p>
						<p>
							<input class="name" type="email" name="email" value="<%= $args->{email} %>" required>
						</p>
						<p><button type="submit">Сохранить</button></p>
					</li>
				% end

				%= form_for users_update_pass => (method => 'POST') => begin
					<li>
						<p>Текущий пароль</p>
						<p>
							<input class="name" type="password" name="pass-old" required>
						</p>
					</li>
					<li>
						<p>Новый пароль</p>
						<p>
							<input class="name" type="password" name="pass-new" required>
						</p>
					</li>
					<li>
						<p>
							<button type="submit">Изменить пароль</button>
						</p>
					</li>
				% end
			</ul>
		</div>
	</div>
	<div class="footer"></div>
</body>
</html>
